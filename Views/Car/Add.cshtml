@model AutoTracker.ViewModel.AddCarViewModel

    ViewData["Title"] = "Add";
}

<h1>Add Car</h1>
<form asp-controller="User" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="VinNumber"></label>
        <input class="form-control" asp-for="VinNumber" />
        <span asp-validation-for="VinNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="Make"></label>
        <input class="form-control" asp-for="Make" />
        <span asp-validation-for="Make"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input class="form-control" asp-for="Model" />
        <span asp-validation-for="Model"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input class="form-control" asp-for="Year" />
        <span asp-validation-for="Year"></span>
    </div>


    <div class="form-group">
        <label asp-for="CurrentMiles"></label>
        <input class="form-control" asp-for="CurrentMiles" />
        <span asp-validation-for="CurrentMiles"></span>
    </div>
    
    <div class="card-footer">
        <input class="btn btn-danger btn-sm" type="submit" value="Add My Car" />


    </div>
</form>

