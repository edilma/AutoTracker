

@model List<AutoTracker.Models.Car>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Make</th>
        <th>Model</th>
        <th>Year</th>
    </tr>

    @foreach (var car in Model)
    {
        <tr>
            <td>@car.Make</td>
            <td>@car.Model</td>
            <td>@car.Year</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No cars yet!</p>
}

<p>
    <span>
        <a asp-controller="Cheese" asp-action="Add">Add Car</a> |
        <a asp-controller="Cheese" asp-action="Remove">Remove</a>
    </span>
</p>

